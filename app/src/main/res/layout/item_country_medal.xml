<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="9dp"
    android:layout_height="wrap_content"
    android:background="@color/login_background"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/tvCountryName"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/ivFlagg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Country name" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFlagg"
            android:layout_width="150dp"
            android:layout_height="105dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="14dp"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivFlagg"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tvIDCountry"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/id2"
                app:drawableTint="@color/white"
                tools:text=" 32" />

            <TextView
                android:id="@+id/tvCountryPos"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic"
                app:drawableStartCompat="@drawable/podio3"
                app:drawableTint="@color/white"
                tools:text=" 15" />

            <TextView
                android:id="@+id/tvCountryGoldMedal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:textStyle="italic"
                app:drawableStartCompat="@drawable/badgesvg"
                app:drawableTint="@color/gold_badge"
                tools:text="nbr of Gold" />

            <TextView
                android:id="@+id/tvCountrySilverMedal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:textStyle="italic"
                app:drawableStartCompat="@drawable/badgesvg"
                app:drawableTint="@color/silver_badge"
                tools:text="nbr of Silver" />

            <TextView
                android:id="@+id/tvCountryBronzeMedal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:textStyle="italic"
                app:drawableStartCompat="@drawable/badgesvg"
                app:drawableTint="@color/bronze_badge"
                tools:text="nbr of Bronze" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>