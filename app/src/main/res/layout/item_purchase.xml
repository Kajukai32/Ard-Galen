<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardCornerRadius="13dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="@color/login_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/login_buttons"
        android:paddingHorizontal="15dp"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/tvIDPurchase"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/tvAmount"
            app:layout_constraintEnd_toStartOf="@id/tvEventID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text=" IdPurch" />

        <TextView
            android:id="@+id/tvUserID"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/tvSeat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvEventID"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="UserId" />

        <TextView
            android:id="@+id/tvEventID"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/tvCreateDate"
            app:layout_constraintEnd_toStartOf="@id/tvUserID"
            app:layout_constraintStart_toEndOf="@id/tvIDPurchase"
            app:layout_constraintTop_toTopOf="parent"
            tools:text=" IdEvent" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="15sp"
            app:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvCreateDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvIDPurchase"
            tools:text="tvAmount" />

        <TextView
            android:id="@+id/tvCreateDate"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvSeat"
            app:layout_constraintStart_toEndOf="@id/tvAmount"
            app:layout_constraintTop_toBottomOf="@id/tvEventID"
            tools:text="dateCreat" />

        <TextView
            android:id="@+id/tvSeat"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvCreateDate"
            app:layout_constraintTop_toBottomOf="@id/tvUserID"
            tools:text=" seat" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView><!--    val id: Long,-->
